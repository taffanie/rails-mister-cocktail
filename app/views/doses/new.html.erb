<div class="add-form">
  <%= simple_form_for ([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient.all %>
  <%= f.submit "Add dose" %>
  <% end %>
</div>


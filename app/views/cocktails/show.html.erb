<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
    </li>

  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %><br>

<%= link_to "Back", cocktails_path %>

<!-- Can do dose.ingredient.name because dose belongs_to an ingredient -->
